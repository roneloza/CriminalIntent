<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <CheckBox
        android:id="@+id/list_item_crime_solved_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crime_solved_label"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_crime_crime_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/crime_title_label"
        android:layout_toLeftOf="@+id/list_item_crime_solved_check_box"
        android:textStyle="bold"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/list_item_crime_crime_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/crime_details_label"
        android:layout_toLeftOf="@+id/list_item_crime_solved_check_box"
        android:layout_below="@+id/list_item_crime_crime_title_text_view"
        android:padding="8dp"/>

</RelativeLayout>